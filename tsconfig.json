{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["@types","@types/express","@types/request","@types/expresspro"]
  },
  "exclude": ["./example","./dist","node_modules"],
  "include": ["./src"]
}